<% include ./partial/header %>
<div
  class="container"
  style=" position: relative;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
background-color: rgb(225, 224, 224);
border-radius: 5px;
padding: 20px 0 30px 0;
width: 40%;
margin-top: 100px;
"
>
  
      <form action="/hod/<%=hod._id%>?_method=PUT" method="POST">
        <div class="row">
          <div class="col">
            <h1 style="text-align:center;">Edit Profile</h1>
            <div class="form-group form-inline">
                <label for="name" style="width: 200px;
                display: inline-block;
                text-align: right;
                ">Name  &ensp;</label>
              <input
                class="form-control"
                type="text"
                id="name"
                value="<%= hod.name%>"
                name="hod[name]"
              />
            </div>
            <div class="form-group form-inline">
                <label for="username" style="width: 200px;
                display: inline-block;
                text-align: right;
                ">Username &ensp;</label>
              <input
                class="form-control"
                type="text"
                id="username"
                value="<%= hod.username%>"
                name="hod[username]"
              />
            </div>
            <div class="form-group form-inline">
                <label for="department" style="width: 200px;
                display: inline-block;
                text-align: right;
                ">Department &ensp;</label>
              <input
                class="form-control"
                type="text"
                id="department"
                value="<%= hod.department%>"
                name="hod[department]"
              />
            </div>

            <div class="form-group form-inline">
                <label for="url" style="width: 200px;
                display: inline-block;
                text-align: right;
                ">Profile image &ensp;</label>
              <input
                class="form-control"
                type="text"
                id="url"
                value="<%= hod.image%>"
                name="hod[image]"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-default btn-block ">Submit</button>
            </div>
          </div>
        </div>
      </form>
      <a style="margin-left: 20px;" href="/hod/profile">Back</a>
    </div>
  </div>
</div>

<% include ./partial/footer %>
