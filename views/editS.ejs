<% include ./partial/header %>
<div
  class="container"
  style=" position: relative; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
border-radius: 5px;
background-color: rgb(225, 224, 224);
padding: 60px 0 30px 0;
width: 40%;
margin-top: 100px;
"
>

    
    
      <form action="/student/<%=student._id%>?_method=PUT" method="POST" style="margin-top: 20px;">
        <div class="row">
          <div class="col">
              <h2 style="text-align:center;">Edit Profile</h2>
              <div class=" form-group form-inline">
                  <label for="name" style="width: 200px;
                  display: inline-block;
                  text-align: right;
                  ">Name &ensp;</label>
                  <input
                    class="form-control"
                    type="text"
                    id="name"
                    value="<%= student.name%>"
                    name="student[name]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="username" style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    ">Username &ensp;</label>
                  <input
                    class="form-control"
                    type="text"
                    id="username"
                    value="<%= student.username%>"
                    name="student[username]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="department" style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    ">Department &ensp;</label>
                  <input
                    class="form-control"
                    type="text"
                    id="department"
                    value="<%= student.department%>"
                    name="student[department]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="hostel" style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    ">Hostel &ensp;</label>
                  <input
                    class="form-control"
                    type="text"
                    id="hostel"
                    value="<%= student.hostel%>"
                    name="student[hostel]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="url" style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    ">Profile image  &ensp;</label>
                  <input
                    class="form-control"
                    type="text"
                    id="url"
                    value="<%= student.image%>"
                    name="student[image]"
                  />
                </div>
                <div class="form-group">
                  <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
                </div>
          </div>
        </div>
        
      </form>
      <a style="margin-left: 20px;" href="/student/<%= student.id%>">Back</a>
    </div>
  </div>
</div>

<% include ./partial/footer %>
