<% include ./partial/header %>
<% include ./partial/studfunction %> 
<div
class="col-sm-6"
style="    flex: 0 0 50%;
max-width: 60%;
margin-left: 300px;
margin-right: 800;
margin-top: -181px;  text-align: -webkit-center;"
>
      <div class="thumbnail">
        <img
          style="height:180px;width:180px;border-radius: 100%"
          src="https://freepngimg.com/thumb/facebook/62681-flat-icons-face-computer-design-avatar-icon.png"
        />
        <h2><%=student.name%></h2>
        <h4><%=student.type%> at PICT</h4>
        <h4><%=student.username%></h4>
        <h4><%=student.department%></h4>
        <h4><%=student.hostel%></h4>
      </div>
    </div>

    <div class="container" >
      <table class="content-table"
      style="margin: 50px auto;min-width:400px;width: 90%; box-shadow: 0 0 20px rgba(0,0,0,0.15);margin-left: 100px;">
        <tr  style="background-color: rgb(9, 1, 19); border-radius: 5px 5px 0 0;overflow: hidden;  color: #ffffff;text-align: left; font-weight: bold;"
        >
          <th>
            Subject
          </th>
          <th>
            From
          </th>
          <th>To</th>
          <th>Days</th>
          <th>Status</th>
        </tr>
        <%student.leaves.forEach(function(leave){%>

        <tr>
          <td><%=leave.subject%></td>
          <td><%=moment(leave.from).format('DD/MM/YYYY')%></td>
          <td><%=moment(leave.to).format('DD/MM/YYYY')%></td>
          <td><%=leave.days%></td>
          <td><%=leave.status%></td>
        </tr>

        <%})%>
      </table>
    </div>

    <% include ./partial/footer %>
  </div>
</div>
